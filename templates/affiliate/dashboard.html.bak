<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Affiliate Dashboard - SkyCareLink</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome 6 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Site Audit UX Tightening - Compact CSS -->
    <link rel="stylesheet" href="/static/css/compact.css">
    
    <style>
        .queue-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            margin-bottom: 1rem;
            transition: all 0.3s ease;
        }
        
        .queue-card:hover {
            border-color: #007bff;
            box-shadow: 0 2px 8px rgba(0,123,255,0.1);
        }
        
        .queue-card.urgent {
            border-left: 4px solid #dc3545;
        }
        
        .queue-card.priority {
            border-left: 4px solid #ffc107;
        }
        
        .queue-card.standard {
            border-left: 4px solid #28a745;
        }
        
        .severity-badge {
            font-size: 0.75rem;
            font-weight: bold;
        }
        
        .age-badge {
            font-size: 0.7rem;
        }
        
        .btn-sm-custom {
            padding: 0.25rem 0.5rem;
            font-size: 0.75rem;
            margin: 0.1rem;
        }
        
        .card-actions {
            display: flex;
            gap: 0.25rem;
            flex-wrap: wrap;
        }
        
        .trip-info {
            background: #f8f9fa;
            padding: 0.5rem;
            border-radius: 4px;
            font-size: 0.85rem;
        }
        
        .contact-info {
            font-size: 0.8rem;
            color: #666;
        }
        
        .stats-row {
            background: #f8f9fa;
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
        }
        
        @media (max-width: 768px) {
            .card-actions {
                flex-direction: column;
            }
            
            .btn-sm-custom {
                width: 100%;
                margin: 0.1rem 0;
            }
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#"><i class="fas fa-helicopter me-2"></i>SkyCareLink Affiliate</a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/affiliate/call-center-settings"><i class="fas fa-cog me-1"></i>Settings</a>
            </div>
        </div>
    </nav>
    
    <div class="container-fluid py-3">
        <!-- Statistics Row -->
        <div class="stats-row">
            <div class="row g-3 text-center">
                <div class="col-6 col-md-3">
                    <h4 class="text-primary mb-0">{{ stats.pending_quotes }}</h4>
                    <small class="text-muted">Pending Quotes</small>
                </div>
                <div class="col-6 col-md-3">
                    <h4 class="text-success mb-0">{{ stats.completed_today }}</h4>
                    <small class="text-muted">Completed Today</small>
                </div>
                <div class="col-6 col-md-3">
                    <h4 class="text-warning mb-0">{{ stats.urgent_requests }}</h4>
                    <small class="text-muted">Urgent Requests</small>
                </div>
                <div class="col-6 col-md-3">
                    <h4 class="text-info mb-0">${{ "{:,.0f}".format(stats.revenue_today) }}</h4>
                    <small class="text-muted">Revenue Today</small>
                </div>
            </div>
        </div>
        
        <!-- Flash Messages -->
        {% with messages = get_flashed_messages(with_categories=true) %}
            {% if messages %}
                {% for category, message in messages %}
                <div class="alert alert-{{ 'danger' if category == 'error' else category }} alert-dismissible fade show">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
                {% endfor %}
            {% endif %}
        {% endwith %}
        
        <!-- Quote Queue -->
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5><i class="fas fa-list me-2"></i>Quote Queue</h5>
                    <button class="btn btn-outline-primary btn-sm" onclick="location.reload()">
                        <i class="fas fa-refresh me-1"></i>Refresh
                    </button>
                </div>
                
                {% if quotes %}
                    {% for quote in quotes %}
                    <div class="queue-card {{ 'urgent' if quote.severity_level == 3 else 'priority' if quote.severity_level == 2 else 'standard' }}">
                        <div class="card-body p-3">
                            <div class="row g-2">
                                <!-- Header Row -->
                                <div class="col-12">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <strong class="text-primary">{{ quote.ref_id }}</strong>
                                            <span class="badge bg-{{ 'danger' if quote.severity_level == 3 else 'warning' if quote.severity_level == 2 else 'success' }} severity-badge ms-2">
                                                Level {{ quote.severity_level }}
                                            </span>
                                            <span class="badge bg-secondary age-badge ms-2">
                                                {{ quote.age_hours }}h ago
                                            </span>
                                        </div>
                                        <span class="badge bg-{{ 'primary' if quote.status == 'pending' else 'success' if quote.status == 'quoted' else 'info' }}">
                                            {{ quote.status|title }}
                                        </span>
                                    </div>
                                </div>
                                
                                <!-- Trip Information -->
                                <div class="col-md-8">
                                    <div class="trip-info">
                                        <div class="d-flex align-items-center mb-1">
                                            <i class="fas fa-plane-departure text-primary me-2"></i>
                                            <strong>{{ quote.from_city }}, {{ quote.from_state }}</strong>
                                            <i class="fas fa-arrow-right mx-2 text-muted"></i>
                                            <strong>{{ quote.to_city }}, {{ quote.to_state }}</strong>
                                        </div>
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-calendar text-info me-2"></i>
                                            <span>{{ quote.flight_date.strftime('%b %d, %Y') if quote.flight_date else 'Date TBD' }}</span>
                                            {% if quote.ground_transport_needed %}
                                            <span class="badge bg-info ms-2">
                                                <i class="fas fa-ambulance me-1"></i>Ground Transport
                                            </span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Contact Information -->
                                <div class="col-md-4">
                                    <div class="contact-info">
                                        <div><i class="fas fa-user me-1"></i>{{ quote.contact_name or 'Contact TBD' }}</div>
                                        {% if quote.contact_phone %}
                                        <div><i class="fas fa-phone me-1"></i>{{ quote.contact_phone }}</div>
                                        {% endif %}
                                        {% if quote.contact_email %}
                                        <div><i class="fas fa-envelope me-1"></i>{{ quote.contact_email }}</div>
                                        {% endif %}
                                    </div>
                                </div>
                                
                                <!-- Action Buttons -->
                                <div class="col-12">
                                    <div class="card-actions">
                                        {% if quote.status == 'pending' %}
                                        <a href="/affiliate/submit-quote/{{ quote.ref_id }}" class="btn btn-primary btn-sm-custom">
                                            <i class="fas fa-edit me-1"></i>Accept & Quote
                                        </a>
                                        <form method="POST" action="/affiliate/pass/{{ quote.ref_id }}" style="display: inline;">
                                            <button type="submit" class="btn btn-outline-secondary btn-sm-custom">
                                                <i class="fas fa-arrow-right me-1"></i>Pass
                                            </button>
                                        </form>
                                        {% elif quote.status == 'quoted' %}
                                        <div class="d-flex align-items-center">
                                            <span class="text-success me-2">
                                                <i class="fas fa-dollar-sign me-1"></i>
                                                ${{ "{:,.2f}".format(quote.quoted_price) if quote.quoted_price else 'Price TBD' }}
                                            </span>
                                            <form method="POST" action="/affiliate/confirm/{{ quote.ref_id }}" style="display: inline;">
                                                <button type="submit" class="btn btn-success btn-sm-custom" 
                                                        {% if not quote.quoted_price %}disabled title="Price required"{% endif %}>
                                                    <i class="fas fa-check me-1"></i>Confirm Booking
                                                </button>
                                            </form>
                                        </div>
                                        {% elif quote.status == 'confirmed' %}
                                        <span class="text-success">
                                            <i class="fas fa-check-circle me-1"></i>Booking Confirmed
                                        </span>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                {% else %}
                    <div class="text-center py-5">
                        <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">No quotes in queue</h5>
                        <p class="text-muted">New quote requests will appear here automatically.</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
    
    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Site Audit UX Tightening - UI.js -->
    <script src="/static/js/ui.js"></script>
    
    <script>
        // Auto-refresh every 30 seconds
        setInterval(function() {
            // Only refresh if no modals are open
            if (!document.querySelector('.modal.show')) {
                location.reload();
            }
        }, 30000);
        
        // Confirm pass action
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('form[action*="/pass/"]').forEach(form => {
                form.addEventListener('submit', function(e) {
                    if (!confirm('Are you sure you want to pass on this quote? It will be offered to the next affiliate.')) {
                        e.preventDefault();
                    }
                });
            });
        });
    </script>
</body>
</html>